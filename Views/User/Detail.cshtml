@using RunGroupSocialMedia.ViewModels
@model UserDetailViewModel



<h1 class="px-5">Welcome to the runners detail page!</h1>

<section class="space-sm bg-secondary bg-gradient px-5" width="100%">
    <div class="container">
        <div class="row py-3">
            <div class="col-lg-7 mb-4 mb-sm-0">
                <img alt="Image" src="@Model.ProfileImageUrl" width="75%" class="border border-dark-subtle border-5 rounded-circle rounded-5 img-fluid" />
            </div>
            <!--end of col-->
            <div class="col-lg-4 d-flex flex-column justify-content-between mr-auto ml-auto">
                <div>
                    <h1 class="mb-2">About User</h1>
                    <h2 class="lead mb-3">I run in @Model.City, @Model.State</h2>
                    <h2 class="lead mb-3"> My Pace: @Model.Pace</h2>
                    <h2 class="lead mb-3"> My Mileage: @Model.Mileage</h2>
                    <!--<article>
                        descrption here.
                    </article>-->
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
</section>
<br />

<section class="px-5">
    <h2 class="display-4 fw-normal">Users Clubs</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model.Clubs)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">@item.Title</p>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="btn btn-success" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                            </div>
                            <small class="text-muted">@item.ClubCategory</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <h2 class="display-4 fw-normal">Users Races</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @foreach (var item in Model.Races)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">@item.Title</p>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="btn btn-success" asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                            </div>
                            <small class="text-muted">@item.RaceCategory</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
