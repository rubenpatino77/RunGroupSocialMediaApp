@model RunGroupSocialMedia.ViewModels.FriendRequestViewModel


<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        @if (Model.FriendRequests.Count() > 0)
                         {
                            @foreach (var request in Model.FriendRequests)
                                {
                                <tr class="bg-white">
                                    <th scope="row">
                                        <div class="align-items-center row" width="100%">
                                            <div class="rounded-pill rounded-5 col">
                                                <img alt="Image profile avatar" width="15%" src="@request.Sender.ProfileImageUrl" class="avatar img-fluid rounded-pill">
                                            </div>
                                            <div class="media-body col">
                                                <span class="h6 mb-0">@request.Sender.UserName</span>
                                            </div>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@request.Sender.Id">
                                            View Profile
                                        </a>
                                    </td>

                                    @{
                                        var mileage = request.Sender.Mileage == null ? "?" : request.Sender.Mileage.ToString();
                                        var pace = request.Sender.Pace == null ? "?" : request.Sender.Pace.ToString();
                                    }
                                    <td>@mileage mile at @pace mph</td>
</div>
                                    </th>
            <td>
                <a class="btn btn-outline-primary" asp-controller="Friend" asp-action="AcceptFriendRequest" asp-route-id="@request.Sender.Id">
                    Accept
                </a>
                <a class="btn btn-outline-primary" asp-controller="Friend" asp-action="DeclineFriendRequest" asp-route-id="@request.Sender.Id">
                    Decline
                </a>
            </td>

                                </tr>
                                <tr class="table-divider">
                                    <th></th>
                                    <td></td>
                                </tr>
                             }
                         } else
                         {
                             <h1>No Friend Requests</h1>
                         }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>